@model PostOffice.API.DTOs.User.UserViewDTO
@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Profile</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Profile</a></li>                   
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title mb-3">Profile Card</strong>
                    </div>
                    <div class="card-body">
                        <div class="mx-auto d-block">
                            <img class="rounded-circle mx-auto d-block" src="images/admin.jpg" alt="Card image cap">
                            <h5 class="text-sm-center mt-2 mb-1">@Model.FirstName @Model.LastName </h5>
                            <h5 class="text-sm-center mt-2 mb-1"><i class="fa-envelope"></i>@Model.Email  </h5>
                            <div class="location text-sm-center"><i class="fa fa-map-marker"></i> @Model.Address </div>
                            <div class="location text-sm-center"><i class="fa fa-phone"></i> @Model.PhoneNumber </div>
                        </div>
                        <hr>
                        <div class="card-text text-sm-center">
                            <a href="/Client/Profile/Edit/@Model.Id">Edit Profile</a>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- .row -->
    </div><!-- .animated -->
</div><!-- .content -->