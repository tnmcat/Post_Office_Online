@using PostOffice.API.DTOs.OrderStatus
@model PostOffice.API.DTOs.ParcelOrder.ParcelOrderBase
@{
    ViewData["Title"] = "Shipping";
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
}

<div class="col-12">
    <div class="callout callout-info">
        <h5><i class="fas fa-info"></i>Shipping Detail:</h5>
    </div>
    
    <div class="invoice p-3 mb-3">
        <!-- title row -->
        <div class="row">
            <div class="col-12">
                <h4>
                    <i class="fas fa-globe"></i> TARS Delivery System
                    <small class="float-right">Date: @Model.send_date</small>
                </h4>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                From
                <address>
                    <strong>@Model.sender_name</strong><br>
                    @Model.sender_address<br>
                    @Model.sender_pincode<br>
                    @Model.sender_phone<br>
                    @Model.sender_email
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                To
                <address>
                    <strong>@Model.receiver_name</strong><br>
                    @Model.receiver_address<br>
                    @Model.receiver_pincode<br>
                    @Model.receiver_phone<br>
                    @Model.receiver_email
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Shipping detail</b><br>
                <br>
                <b>payment</b>@Model.payment_method<br>
                <b>payer:</b> @Model.payer
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Parcel Type</th>
                            <th>parcel length </th>
                            <th>parcel Width</th>
                            <th>parcel height</th>
                            <th>Note</th>
                            <th>Order Status</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.vpp_value</td>
                            <td>@Model.parcel_length</td>
                            <td>@Model.parcel_width</td>
                            <td>@Model.parcel_height</td>
                            <td>@Model.note</td>
                            <td>@(Model.order_status)</td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

        <div class="row">
            <!-- accepted payments column -->
            <!-- /.col -->
            <div class="col-6">

                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Total charge</th>
                            <td>@Model.total_charge</td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- this row will not appear when printing -->
    </div>
    <!-- /.invoice -->
</div>
